<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginTop="@dimen/spacing_1x"
        android:id="@+id/songDetailsItemTextView"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/item_title_text_size"
        android:textColor="@color/titleColor"
        android:layout_marginStart="@dimen/spacing_3x"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/artistDetailsItemTextView"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/item_subtitle_margin_top"
        android:textSize="@dimen/item_subtitle_text_size"
        android:layout_height="wrap_content"
        android:textColor="@color/subtitleColor"
        app:layout_constraintTop_toBottomOf="@id/songDetailsItemTextView"
        app:layout_constraintStart_toStartOf="@id/songDetailsItemTextView"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/spacing_1x"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/artistDetailsItemTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>